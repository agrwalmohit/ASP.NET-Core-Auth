@model TodoWebClient.ViewModels.EditTodoItemViewModel

<h2 class="leftMarginSmaller">Edit Image Title</h2>

<form asp-action="EditImage" method="post" class="form-horizontal" role="form">

    <div class="form-horizontal leftMarginDefault">

        <div class="form-group">
            <div>Name</div>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="form-group">
            <div>Is Complete?</div>
            <input asp-for="IsComplete" type="checkbox" class="form-control" />
        </div>

        <div class="form-group">
            <div>
                <input type="submit" class="btn btn-primary" value="Edit" />
            </div>
        </div>
    </div>
</form>
